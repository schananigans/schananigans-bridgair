---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Resume | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <main class="resume-page">
      <header class="page-header">
        <h1>Resume</h1>
        <p class="lead">View or download my resume.</p>
      </header>

      <section class="card">
        <div class="actions">
          <!-- Download link (forces download in most browsers) -->
          <a href="/resume.pdf" class="btn download" download="Bridger_Schaffer_Resume.pdf">ðŸ“¥ Download Resume (PDF)</a>

          <!-- Open in new tab -->
          <a href="/resume.pdf" class="btn open" target="_blank" rel="noopener">ðŸ”Ž Open in new tab</a>
        </div>

        <!-- Embedded PDF. object is a sensible fallback; iframe/embed work too. -->
        <div class="embed-wrap" role="region" aria-label="Resume PDF">
          <object data="/resume.pdf" type="application/pdf" class="resume-embed">
            <!-- Fallback if browser can't render PDFs inline -->
            <p>
              Your browser doesn't support inline PDFs. You can
              <a href="/resume.pdf" download>download the resume here</a>.
            </p>
          </object>
        </div>
      </section>
    </main>

    <Footer />
  </body>

  <style>
    :root{
      --bg: #0f1219;
      --panel: rgba(255,255,255,0.03);
      --panel-strong: rgba(255,255,255,0.06);
      --muted: #aab4c4;
      --accent: #4da6ff;
      --text: #e6eef9;
    }

    html, body { background: var(--bg); color: var(--text); margin: 0; padding: 0; }
    main.resume-page {
      max-width: 1100px;
      margin: 2.25rem auto;
      padding: 1.25rem;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    .page-header { text-align: center; margin-bottom: 1.25rem; }
    .page-header h1 { margin: 0 0 .25rem; font-size: 2rem; }
    .lead { margin: 0; color: var(--muted); }

    .card {
      background: var(--panel);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 12px;
      padding: 1rem;
      box-shadow: 0 8px 24px rgba(0,0,0,0.45);
    }

    .actions {
      display: flex;
      gap: 0.75rem;
      align-items: center;
      justify-content: flex-start;
      margin-bottom: 1rem;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-block;
      padding: 0.6rem 0.9rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      color: var(--text);
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.06);
      transition: transform .12s ease, background .12s ease, border-color .12s ease;
    }
    .btn:hover { transform: translateY(-3px); background: var(--panel-strong); border-color: rgba(255,255,255,0.12); }

    .btn.download { background: linear-gradient(90deg, rgba(77,166,255,0.12), rgba(77,166,255,0.06)); border-color: rgba(77,166,255,0.18); color: var(--text); }

    .embed-wrap {
      width: 100%;
      background: rgba(0,0,0,0.15);
      border-radius: 8px;
      overflow: hidden;
    }

    /* The embedded PDF area: tall on desktop, shorter on small screens */
    .resume-embed {
      width: 100%;
      height: 820px; /* desktop height */
      border: none;
      display: block;
      background: #fff;
    }

    /* Responsive adjustments */
    @media (max-width: 980px) {
      .resume-embed { height: 640px; }
    }
    @media (max-width: 520px) {
      .actions { justify-content: center; }
      .resume-embed { height: 480px; }
    }
  </style>
</html>
