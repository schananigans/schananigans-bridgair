---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <!-- Banner (under header) -->
    <div class="banner">
      <img src="/banner1.jpg" alt="Banner" />
    </div>

    <!-- Page main (we override global main sizing with a class) -->
    <main class="page-main">
      <div class="container">
        <!-- Intro / About snapshot -->
        <section class="about">
          <h1>Hi, I‚Äôm Bridger üëã</h1>
          <p>
            I‚Äôm a freshman at <strong>Embry-Riddle Aeronautical University</strong> studying
            Aeronautical Science. I hold a <strong>Private Pilot License</strong> and enjoy
            combining technical projects with outdoor adventures like skiing and mountain biking.
          </p>
        </section>

        <!-- Photo on the left, Highlights on the right -->
        <section class="about-highlight">
          <div class="photo-wrap">
            <img src="/aboutme.jpg" alt="Photo of Bridger" class="profile-photo" />
          </div>

          <div class="highlights">
            <h2>Highlights</h2>
            <div class="cards">
              <div class="card">
                <h3>üéì Education</h3>
                <p>Embry-Riddle Aeronautical University<br/>Private Pilot License</p>
              </div>
              <div class="card">
                <h3>‚úàÔ∏è Aviation</h3>
                <p>Aspiring commercial pilot ‚Äî currently building hours & training</p>
              </div>
              <div class="card">
                <h3>üöµ Outdoors</h3>
                <p>Skiing, mountain biking, and hiking across the Pacific Northwest</p>
              </div>
              <div class="card">
                <h3>üíª Projects</h3>
                <p>3D-printed RC airplane, journaling app, personal website</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Quick links / CTA -->
        <section class="featured-links">
          <a href="/projects">üöÄ Projects</a>
          <a href="/journal">üìì Journal</a>
          <a href="/links">üîó Links</a>
          <a href="/resume">üìÑ Resume</a>
        </section>
      </div>
    </main>

    <Footer />
  </body>
</html>

<style>
  /* Page-level overrides so the global main width (720px) doesn't constrain this page */
  .page-main {
    width: 100%;
    max-width: none; /* overrides site global */
    padding: 2rem 1rem;
  }

  /* Centered content container with generous max width */
  .container {
    max-width: 1300px;
    margin: 0 auto;
  }

  /* Banner */
  .banner {
    position: relative;
    width: 100%;
    height: clamp(240px, 40vh, 600px); /* responsive height */
    overflow: hidden;
    background: #0f1219; /* fallback */
  }
  .banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
  .banner::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 160px;
    background: linear-gradient(to bottom, rgba(15,18,25,0), #0f1219);
  }

  /* ABOUT */
  .about {
    text-align: center;
    color: #eef2f8;
    margin: 2.5rem 0;
  }
  .about h1 {
    margin: 0 0 0.5rem;
    font-size: 2.1rem;
    color: #ffffff;
  }
  .about p {
    margin: 0 auto;
    max-width: 820px;
    color: #c9d1d9;
    line-height: 1.6;
  }

  /* PHOTO + HIGHLIGHTS layout */
  .about-highlight {
    display: flex;
    align-items: flex-start;
    gap: 3rem;
    margin: 3rem 0;
    width: 100%;
  }

  /* The photo column */
  .photo-wrap {
    flex: 0 0 360px; /* fixed width column for photo */
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  .profile-photo {
    width: 360px;
    height: 360px;
    object-fit: cover;
    border-radius: 16px;
    box-shadow: 0 10px 32px rgba(0,0,0,0.6);
  }

  /* The highlights column takes remaining space */
  .highlights {
    flex: 1 1 auto;
    color: #eef2f8;
  }
  .highlights h2 {
    margin: 0 0 1rem;
    font-size: 1.9rem;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(2, minmax(0,1fr));
    gap: 1.25rem;
  }

  .card {
    background: rgba(255,255,255,0.03); /* subtle dark card */
    padding: 1.25rem;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.45);
    color: #dbe6f5;
  }
  .card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.05rem;
  }
  .card p {
    margin: 0;
    color: #bfc9d8;
    line-height: 1.5;
  }

  /* Quick links under the highlights */
  .featured-links {
    margin-top: 2.5rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .featured-links a {
    display: inline-block;
    padding: 0.6rem 1rem;
    background: rgba(255,255,255,0.03);
    color: #e6eef9;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: transform 160ms ease, background 160ms ease;
  }
  .featured-links a:hover {
    transform: translateY(-3px);
    background: rgba(255,255,255,0.06);
  }

  /* Responsive: stack photo and highlights on narrow screens */
  @media (max-width: 940px) {
    .about-highlight {
      flex-direction: column;
      align-items: center;
    }
    .photo-wrap {
      flex: 0 0 auto;
    }
    .profile-photo {
      width: 280px;
      height: 280px;
    }
    .cards {
      grid-template-columns: 1fr;
    }
    .container {
      padding: 0 1rem;
    }
  }

  /* Small screens */
  @media (max-width: 520px) {
    .profile-photo {
      width: 220px;
      height: 220px;
      border-radius: 12px;
    }
    .about h1 {
      font-size: 1.6rem;
    }
  }
</style>
