    height: 100%;
    object-fit: cover;
    object-position: bottom; /* <-- only show the bottom part */
    display: block;
  }

  .banner::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px; /* how tall the fade is */
    background: linear-gradient(
