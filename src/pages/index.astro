---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bridger Schaffer</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      color: #333;
    }

    header {
      text-align: center;
      padding: 2rem 1rem;
      background: linear-gradient(135deg, #004aad, #0073e6);
      color: white;
    }

    header h1 {
      margin: 0;
      font-size: 2.5rem;
    }

    header p {
      margin: 0.5rem 0 0;
      font-size: 1.2rem;
    }

    /* Layout for photo + highlights */
    .main {
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      justify-content: center;
      padding: 2rem;
      gap: 2rem;
      max-width: 1400px;
      margin: 0 auto;
    }

    /* Photo styling */
    .profile-photo {
      flex: 1;
      display: flex;
      justify-content: center;
    }

    .profile-photo img {
      max-width: 100%;
      height: auto;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    /* Highlights section */
    .highlights {
      flex: 3; /* allows it to take up more space */
    }

    .highlights h2 {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .card {
      background: white;
      padding: 1.5rem;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .card h3 {
      margin-top: 0;
    }

    footer {
      text-align: center;
      padding: 1rem;
      background-color: #333;
      color: white;
      margin-top: 2rem;
    }
  </style>
</head>
<body>
  <header>
    <h1>Bridger Schaffer</h1>
    <p>Aspiring Commercial Pilot | Outdoor Enthusiast | Builder</p>
  </header>

  <div class="main">
    <!-- Photo on the left -->
    <div class="profile-photo">
      <img src="your-photo.jpg" alt="Bridger Schaffer">
    </div>

    <!-- Highlights on the right -->
    <section class="highlights">
      <h2>Highlights</h2>
      <div class="cards">
        <div class="card">
          <h3>üéì Education</h3>
          <p>Embry-Riddle Aeronautical University<br/>Private Pilot License</p>
        </div>
        <div class="card">
          <h3>‚úàÔ∏è Aviation</h3>
          <p>Aspiring commercial pilot<br/>Currently training and building hours</p>
        </div>
        <div class="card">
          <h3>üöµ Outdoors</h3>
          <p>Skiing, mountain biking, and hiking across the Pacific Northwest</p>
        </div>
        <div class="card">
          <h3>üíª Projects</h3>
          <p>3D-printed RC airplane, journaling app, personal website</p>
        </div>
      </div>
    </section>
  </div>

  <footer>
    <p>¬© 2025 Bridger Schaffer</p>
  </footer>
</body>
</html>
