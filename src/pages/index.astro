<style>
  body {
    background: #0f1219;
    color: #fff;
    font-family: system-ui, sans-serif;
  }

  .banner {
    position: relative;
    width: 100%;
    height: 400px;
    overflow: hidden;
  }

  .banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 80%;
    display: block;
  }

  .banner::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: linear-gradient(to bottom, rgba(15, 18, 25, 0), #0f1219);
  }

  main {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .about {
    text-align: center;
    margin-bottom: 3rem;
  }

  .highlights {
    margin-bottom: 3rem;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .card {
    background: #1a1d26;
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }

  .featured ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .featured a {
    display: inline-block;
    background: #1a1d26;
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    text-decoration: none;
    color: #fff;
    font-weight: 500;
    transition: background 0.2s;
  }

  .featured a:hover {
    background: #2b2f3a;
  }

.about-highlight {
  display: flex;
  align-items: flex-start;
  gap: 3rem;
  margin: 4rem auto;
  max-width: 1300px; /* allow the highlights to take more horizontal space */
  width: 90%; /* scale nicely on smaller screens */
}

.about-highlight .highlights {
  flex: 1;
}

.profile-photo {
  width: 350px;   /* bigger photo */
  height: 350px;
  border-radius: 16px; /* less circular, more like a card/photo */
  object-fit: cover;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.45);
  flex-shrink: 0; /* stops shrinking */
}

.highlights {
  flex: 1; /* takes the rest of the row */
}

.highlights h2 {
  margin-bottom: 1.5rem;
  font-size: 2rem;
  color: #e4e6eb;
}

.cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
}

.about-highlight .cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
}

</style>
