---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Experience | Bridger Schaffer</title>
  </head>
  <body>
    <Header />

    <main class="timeline-container">
      <!-- College Era -->
      <section>
        <h2>College Era</h2>

        <details>
          <summary>Education</summary>
          <p>
            Embry-Riddle Aeronautical University — Major: Aeronautical Science
            (with PPL training).
          </p>
        </details>

        <details>
          <summary>Clubs & Activities</summary>
          <ul>
            <li>Aviation clubs</li>
            <li>Ski team</li>
            <li>Outdoor recreation groups</li>
          </ul>
        </details>

        <details>
          <summary>Scholarships & Awards</summary>
          <p>(List scholarships, academic/athletic awards, etc.)</p>
        </details>

        <details>
          <summary>Flight Training</summary>
          <details>
            <summary>Progress Log</summary>
            <table>
              <thead>
                <tr>
                  <th>Category</th>
                  <th>Hours</th>
                </tr>
              </thead>
              <tbody>
                <tr><td>Total Time</td><td>XX</td></tr>
                <tr><td>Solo</td><td>XX</td></tr>
                <tr><td>Cross-Country</td><td>XX</td></tr>
                <tr><td>Night</td><td>XX</td></tr>
                <tr><td>IFR</td><td>XX</td></tr>
              </tbody>
            </table>
          </details>
        </details>
      </section>

      <!-- High School Era -->
      <section class="secondary">
        <h2>High School Era</h2>

        <details>
          <summary>Activities</summary>
          <ul>
            <li>Ski team</li>
            <li>Band (trombone)</li>
            <li>Mountain biking</li>
          </ul>
        </details>

        <details>
          <summary>Leadership</summary>
          <p>Planned and organized “Band Prom.”</p>
        </details>

        <details>
          <summary>Awards & Recognition</summary>
          <ul>
            <li>District/State music competitions</li>
          </ul>
        </details>
      </section>
    </main>

    <Footer />
  </body>

  <style>
    main.timeline-container {
      max-width: 800px;
      margin: 2rem auto;
      padding: 1rem;
      font-family: system-ui, sans-serif;
    }

    section {
      margin-bottom: 2rem;
    }

    details {
      background: rgba(255, 255, 255, 0.03);
      color: #e6eef9;
      border-radius: 8px;
      padding: 0.75rem 1rem;
      margin-bottom: 0.5rem;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    summary {
      font-weight: bold;
      cursor: pointer;
      outline: none;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 0.5rem;
    }

    th, td {
      padding: 0.5rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      text-align: left;
    }

    th {
      background: rgba(255, 255, 255, 0.05);
    }

    .secondary details {
      background: rgba(255, 255, 255, 0.02);
    }
  </style>
</html>
