---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/"><img src="/logo2.png" style="border-radius: 10%; width: 20px;"> {SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
<!-- LinkedIn -->
		<a href="https://www.linkedin.com/in/bridger-schaffer-760334380/" target="_blank" rel="noopener">
			<span class="sr-only">LinkedIn</span>
			<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" viewBox="0 0 24 24">
				<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 
					2.239 5 5 5h14c2.761 0 5-2.239 
					5-5v-14c0-2.761-2.239-5-5-5zm-11 
					19h-3v-10h3v10zm-1.5-11.268c-.966 
					0-1.75-.784-1.75-1.75s.784-1.75 
					1.75-1.75 1.75.784 
