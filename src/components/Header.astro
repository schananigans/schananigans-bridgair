---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<!-- LinkedIn -->
			<a href="https://www.linkedin.com/in/bridger-schaffer-760334380/" target="_blank" rel="noopener">
				<span class="sr-only">LinkedIn</span>
				<svg ...></svg>
			</a>
			<!-- Instagram -->
			<a href="https://www.instagram.com/bridgerschaffer/" target="_blank" rel="noopener">
				<span class="sr-only">Instagram</span>
				<svg ...></svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #0d1b2a;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		color: #e0e6ed;
		text-decoration: none;
		font-weight: bold;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 1em 0.5em;
		color: #c9d1d9;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	nav a:hover {
		color: #4da6ff;
	}

	nav a.active {
		border-bottom: 2px solid #4da6ff;
	}

	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #c9d1d9;
	}

	.social-links a:hover {
		color: #4da6ff;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
