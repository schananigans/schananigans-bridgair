<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #0d1b2a; /* midnight blue */
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		color: #e0e6ed;
		text-decoration: none;
		font-weight: bold;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 1em 0.5em;
		color: #c9d1d9;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	nav a:hover {
		color: #4da6ff; /* accent blue */
	}

	nav a.active {
		border-bottom: 2px solid #4da6ff;
	}

	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #c9d1d9;
	}

	.social-links a:hover {
		color: #4da6ff;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
